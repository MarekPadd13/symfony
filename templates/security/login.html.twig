{% extends 'base.html.twig' %}

{% block title %}{% trans %}Security.Sign in{% endtrans %}{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ app.user.username }}, <a href="{{ path('app_logout') }}"> {% trans %}Security.logout{% endtrans %}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{% trans %}Security.Please sign in{% endtrans %}</h1>
    <label for="inputEmail">{% trans %}User.email{% endtrans %}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">{% trans %}User.password.password {% endtrans %}</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        {% trans %}Security.Sign in{% endtrans %}
    </button>
    <a href="{{ path('registration') }}" class="btn btn-lg btn-success" type="submit">
        {% trans %}Registration{% endtrans %}
    </a>
</form>
{% endblock %}
